<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomRental">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="203dp"
        android:layout_height="26dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:text="@string/customrental"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/MRentalback"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/MRentalback"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="15dp"
        android:background="#0021FF"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/abc_vector_test" />

    <Button
        android:id="@+id/btnBike"
        android:layout_width="75dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="75dp"
        android:onClick="Fragment"
        android:text="@string/bike"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnCar"
        android:layout_width="75dp"
        android:layout_height="40dp"
        android:layout_marginStart="1dp"
        android:onClick="Fragment"
        android:text="@string/car"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnBike"
        app:layout_constraintEnd_toStartOf="@+id/btnBicycle"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnBike" />

    <Button
        android:id="@+id/btnBicycle"
        android:layout_width="75dp"
        android:layout_height="40dp"
        android:onClick="Fragment"
        android:text="@string/bicycle"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnBike"
        app:layout_constraintEnd_toStartOf="@+id/btnVan"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnCar" />

    <Button
        android:id="@+id/btnVan"
        android:layout_width="75dp"
        android:layout_height="40dp"
        android:layout_marginEnd="16dp"
        android:onClick="Fragment"
        android:text="@string/van"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnBike"
        app:layout_constraintEnd_toEndOf="parent" />

    <fragment
        android:id="@+id/fragView"
        android:name="com.example.customrental_guide.BikeFragment"
        android:layout_width="match_parent"
        android:layout_height="585dp"
        android:layout_marginTop="31dp"
        app:layout_constraintTop_toBottomOf="@+id/btnBike"
        tools:layout_editor_absoluteX="-1dp" />

</androidx.constraintlayout.widget.ConstraintLayout>